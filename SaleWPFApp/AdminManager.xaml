<Window x:Class="SaleWPFApp.AdminManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaleWPFApp"
        mc:Ignorable="d"
        Title="Admin" Height="550" Width="1000">
    <Window.Resources>
        <ResourceDictionary Source="StyleResource.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top" Height="40">
                <Border Padding="10 0">
                    <DockPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
                        <TextBlock Style="{StaticResource ResourceKey=headingSecorndary}">FStore</TextBlock>
                        <Button Content="Logout" Background="Transparent" BorderThickness="0" Width="50" HorizontalAlignment="Right"/>
                    </DockPanel>
                </Border>
            </Grid>
            <Grid DockPanel.Dock="Left" Width="120">
                <TreeView Name="Menu" BorderThickness="0">
                    <TreeViewItem Header="Products" IsSelected="True" Style="{StaticResource ResourceKey=treeViewItemMenuPrimary}">
                        <TreeViewItem Header="List Products" FontSize="14" Margin="0 10" MouseDoubleClick="Goto_AdminProduct"/>
                        <TreeViewItem Header="Add new" FontSize="14" />
                    </TreeViewItem>
                    <TreeViewItem Header="Member" IsSelected="True" Style="{StaticResource ResourceKey=treeViewItemMenuPrimary}">
                        <TreeViewItem Header="List member" FontSize="14"  Margin="0 10"  MouseDoubleClick="Goto_AdminMember"/>
                        <TreeViewItem Header="Add new" FontSize="14"/>
                    </TreeViewItem>
                    <TreeViewItem Header="Order" IsSelected="True" Style="{StaticResource ResourceKey=treeViewItemMenuPrimary}">
                        <TreeViewItem Header="List orders" FontSize="14"  Margin="0 10"  MouseDoubleClick="Goto_AdminOrder"/>
                    </TreeViewItem>
                </TreeView>
            </Grid>
            <Grid>
                <TextBlock x:Name="headerWelcomeAdmin" Margin="0 0 0 50"  FontWeight="Light" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ResourceKey=headingPrimary}">
                    Welcome to FStore Admin
                </TextBlock>
                <Frame x:Name="frameMain" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
